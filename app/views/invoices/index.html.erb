


<div class="row">

  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading">
      <h3 class="panel-title">Invoices</h3>
      </div>
      
      <div class="panel-body">
      <%if @invoices.count > 0%>
      <div class="chart">
       
         
       <h3 class="text-center">Your total billings vs time</h3>
        <%= area_chart @invoices.group(:date).sum(:amount)%>
      </div>
      <%end%>


        <table class="table table-hover table-bordered">
          <thead> 
            <tr>
              <th>From</th>
              <th>To</th>
              <th>Invoice Amount</th>
              <th>Invoice Date</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @invoices.each do |invoice| %>
              <tr>
                <td><%= invoice.company %></td>
                <td><%= invoice.contragent %></td>
                <td><%= invoice.amount %> <%= invoice.currency %></td>
                <td><%= invoice.date %></td>
                <td><%= link_to 'Show Invoice', invoice ,class:"btn btn-success"%></td>
                <td><%= link_to 'Edit Invoice', edit_invoice_path(invoice),class:"btn btn-default" %></td>
                <td><%= link_to 'Delete Invoice', invoice, method: :delete, data: { confirm: 'Are you sure?' } ,class:"btn btn-warning"%></td>
              </tr>
              <br>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="panel-footer">
        <%= link_to 'New Invoice', new_invoice_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div> 
</div>

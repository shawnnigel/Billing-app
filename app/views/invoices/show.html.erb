
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading">
      <h3 class="panel-title">Invoices</h3>
      </div>

      <div class="panel-body">
        <p>
          <strong>From:</strong>
          
          <%= @invoice.company %>
        
         </p>


        
          <strong>To:</strong>
          
          <%= @invoice.contragent %>
          
        </p>

        <p>
          <strong>Amount:</strong>
          <%= @invoice.currency %>  <%= @invoice.amount %> 
        </p>

        <p>
          <strong>Date:</strong>
          <%= @invoice.date %>
        </p>
      </div>

      <div class="panel-footer">
        <div class="btn-group">
          <%= link_to 'Edit', edit_invoice_path(@invoice), class: "btn btn-danger" %>
          <%= link_to 'Back', invoices_path, class: "btn btn-warning" %>
        </div>
      </div>
    </div>
  </div>
</div>